{
  "name": "paginal-translator",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "bin": {
    "markdown-translate": "bin/cmd.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf lib/ module/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "git config --local core.hooksPath .githook",
    "prepack": "npm run clean && npm run build",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "directories": {
    "bin": "bin",
    "lib": "lib"
  },
  "files": [
    "bin/",
    "lib/"
  ],
  "author": "Naoto Kato <naotokato@plaid.co.jp>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/paginal-translator.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "form-data": "^4.0.0",
    "get-stdin": "^8.0.0",
    "jsdom": "^16.5.3",
    "markdown-it": "^12.0.6",
    "meow": "^9.0.0",
    "node-html-markdown": "^0.1.6"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.10",
    "@types/markdown-it": "^12.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "ts-node-test-register": "10.0.0",
    "typescript": "^4.2.4"
  }
}
