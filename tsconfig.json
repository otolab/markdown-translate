{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "files": ["./src/index.ts", "./src/cli.ts"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "lib"
  ]
}
